            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>
    
    <!--LayoutRoot est la grille racine où tout le contenu de la page est placé-->
	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!--TitlePanel contient le nom de l'application et le titre de la page-->
		<StackPanel Grid.Row="0" Margin="24,17,0,28">
			<!--Titre de la page-->
			<!--<TextBlock x:Name="MyTitle" Text="" Visibility="Visible" Margin="0,-7,0,0" FontFamily="Segoe WP Light" Style="{StaticResource PhoneTextTitle1Style}" RenderTransformOrigin="0.5,0.5">
            	<TextBlock.RenderTransform>
            		<CompositeTransform/>
            	</TextBlock.RenderTransform>
            </TextBlock>-->
		</StackPanel>

        <!--ContentPanel - placez tout contenu supplémentaire ici-->
		<Grid x:Name="ContentPanel" Grid.Row="1" Margin="0,-80,0,0">
			<StackPanel x:Name="myStack">
				<toolkit:GestureService.GestureListener>
					<toolkit:GestureListener
						Flick="OnFlick"/>
				</toolkit:GestureService.GestureListener>

                <!--Première Grille-->
				<Grid x:Name="Grid1" Margin="0,-0,0,0" Visibility="Visible"
					Background="{StaticResource PhoneAccentBrush}" RenderTransformOrigin="0.5,0.5">
					<Grid.RenderTransform>
						<CompositeTransform/>
					</Grid.RenderTransform>
					<TextBlock Text="Bienvenu dans Citations 365" FontFamily="Sego WP" HorizontalAlignment="Center" FontSize="60"
						TextWrapping="Wrap" Margin="38,148,42,0" Width="400"/>
					<TextBlock x:Name="textBlock" Text="Cette application vous fera découvrir une nouvelle citation chaque jour." FontSize="26"
						TextWrapping="Wrap" Margin="38,306,42,0" Opacity="0"/>
                    <Image x:Name="image" Source="/Resources/Icons/Citations365.png" Width="356" HorizontalAlignment="Center" Margin="62,380,62,120" Opacity="0" RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<CompositeTransform/>
						</Image.RenderTransform>
					</Image>
				</Grid>


                <!--Deuxième Grille-->
				<Grid x:Name="Grid2" Margin="0,0,0,0"
					RenderTransformOrigin="0.5,0.5" Visibility="Collapsed">
					<Grid.RenderTransform>
						<CompositeTransform/>
					</Grid.RenderTransform>
					<TextBlock Text="Partage" FontFamily="Sego WP" FontSize="60"
						TextWrapping="Wrap" Margin="20,168,24,0"/>
                
					<TextBlock x:Name="textBlock1" Text="Vous pouvez partager les citations sur les réseaux sociaux tels que Twitter, Facebook, LinkedIn, ou bien par sms et par mail."
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
						Margin="24,250,24,0" Opacity="0"/>
					<TextBlock x:Name="textBlock2" Text="Il suffit de maintenir le doigt sur une des citations, et un menu de partage apparaîtra en bas de l'écran"
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
						Margin="24,420,24,350" Opacity="0"/>
                    <Image x:Name="Img2" Source="/Resources/Icons/Share-01.png" Margin="251,134,110,593" Opacity="0" RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<CompositeTransform/>
						</Image.RenderTransform>
					</Image>
				</Grid>

                <!--Troisième Grille-->
				<Grid x:Name="Grid3" Margin="0,0,0,0"
					Background="{StaticResource PhoneAccentBrush}" Visibility="Collapsed">
                    
					<TextBlock Text="L'auteur" FontFamily="Sego WP" FontSize="60"
						TextWrapping="Wrap" Margin="20,168,24,0"/>

					<TextBlock x:Name="textBlock3" Text="Citations 365 est plus qu'une simple application de citations."
						FontFamily="Segoe WP" FontSize="29.333" TextWrapping="Wrap"
						Margin="24,250,24,0" Opacity="0" RenderTransformOrigin="0.5,0.5">
						<TextBlock.RenderTransform>
							<CompositeTransform/>
						</TextBlock.RenderTransform>
					</TextBlock>
					<TextBlock x:Name="textBlock4" Text="Pour chaque citation, découvrez un auteur grâce à sa biographie."
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
						Margin="24,340,24,0" Opacity="0"/>
					<TextBlock x:Name="textBlock5" Text="Vous aurez les citations associées à cet auteur."
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
						Margin="24,420,24,0" Opacity="0"/>
					<Image x:Name="image1" Source="/Resources/Icons/Portrait.png" Margin="258,153,130,615" Opacity="0" RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<CompositeTransform/>
						</Image.RenderTransform>
					</Image>
				</Grid>

                <!--Quatrième Grille-->
				<Grid x:Name="Grid4" Margin="0,0,0,0" Visibility="Collapsed">
					<TextBlock Text="Recherche par mot clé" FontFamily="Sego WP" FontSize="60"
						TextWrapping="Wrap" Margin="20,168,24,0"/>

					<TextBlock x:Name="textBlock6" Text="Grâce à la recherche par mots clés, il est possible de trouver des citations contenant un ou plusieurs termes précis."
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
						Margin="24,320,24,0" Opacity="0"/>
					<TextBlock x:Name="textBlock7" Text="Vous vous sentez d'une humeur amoureuse? L'application vous liste toutes les citations ayant les termes ''belle'', ''amour'', ''charme''."
						FontFamily="Segoe WP" FontSize="26" TextWrapping="Wrap"
