            <StackPanel>
                <!--Grille pour la date de la citation-->
                <Grid  local:MetroInMotion.Tilt="1.5">
                    <Grid x:Name="GridDate_QuoteDetails" HorizontalAlignment="Left" Margin="0,0,0,20" VerticalAlignment="Top" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <CompositeTransform/>
                        </Grid.RenderTransform>
                        <Grid.Background>
                            <SolidColorBrush Color="White"/>
                        </Grid.Background>
                        <TextBlock x:Name="TBDate_QuoteDetails" FontFamily="Segoe UI Black" FontSize="28" HorizontalAlignment="Center" Margin="12,0,12,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black"/>
                        <Rectangle Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="6"/>
                    </Grid>
                </Grid>

                <!--Grille du contenu de la citation-->
                <Grid x:Name="GridContent_QuoteDetails" HorizontalAlignment="Left" Margin="0,0,0,20" VerticalAlignment="Top" Width="454" MaxHeight="400" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <CompositeTransform/>
                    </Grid.RenderTransform>
                    <Grid.Background>
                        <SolidColorBrush Color="White"/>
                    </Grid.Background>
                    <!--<StackPanel x:Name="spanelQuoteDetails" Orientation="Horizontal">
                    </StackPanel>-->
                    <!--<TextBlock x:Name="TBContent_QuoteDetails" FontFamily="Segoe UI" FontSize="34" HorizontalAlignment="Center" Margin="0,12,0,12" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>-->
                </Grid>

                <!--Grille de l'auteur de la citation-->
                <Grid local:MetroInMotion.Tilt="1.5">
                    <Grid x:Name="GridAuthor_QuoteDetails" HorizontalAlignment="Right" Margin="0,0,16,0" VerticalAlignment="Top" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <CompositeTransform/>
                        </Grid.RenderTransform>
                        <Grid.Background>
                            <SolidColorBrush Color="White"/>
                        </Grid.Background>
                        <TextBlock x:Name="TBAuthor_QuoteDetails" FontFamily="Segoe UI Black" FontSize="30" HorizontalAlignment="Left" Margin="12,0,24,0" TextWrapping="NoWrap" VerticalAlignment="Top" Foreground="Black"/>
                        <Rectangle Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Right" Height="40" VerticalAlignment="Center" Width="6"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
        
    </Grid>
    
    

    
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar x:Name="AppBar" Opacity="0" Mode="Minimized" BackgroundColor="{StaticResource PhoneBackgroundColor}">
            <shell:ApplicationBar.MenuItems>
                <!--<shell:ApplicationBarMenuItem x:Name="BackgroundOffMenuItem" Text="désactiver l'arrière plan" Click="BackgroundOffMenuItem_Click"/>
                <shell:ApplicationBarMenuItem x:Name="BackgroundOnMenuItem" Text="activer l'arrière plan" Click="BackgroundOnMenuItem_Click"/>-->
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>